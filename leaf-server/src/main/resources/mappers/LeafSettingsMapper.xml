<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.github.stone.leaf.server.dao.LeafSettingsMapper">

    <resultMap id="BASE_RESULT_MAP" type="com.github.stone.leaf.server.entity.LeafSettings">
        <id column="leaf_name" property="name" jdbcType="VARCHAR" />
        <result column="leaf_type" property="type" jdbcType="VARCHAR" />
        <result column="delta" property="delta" jdbcType="INTEGER" />
        <result column="maximum" property="maximum" jdbcType="BIGINT" />
        <result column="gmt_create" property="gmtCreate" jdbcType="TIMESTAMP" />
    </resultMap>

    <sql id="BASE_COLUMNS">
        leaf_name,leaf_type,delta,maximum,gmt_create
    </sql>

    <select id="getAllLeafSettings" resultMap="BASE_RESULT_MAP">
        SELECT
        <include refid="BASE_COLUMNS" />
        FROM leaf_settings
    </select>

    <select id="getSettings" resultMap="BASE_RESULT_MAP"
            parameterType="java.lang.String">
        SELECT
        <include refid="BASE_COLUMNS" />
        FROM leaf_settings
        WHERE leaf_name = #{name,jdbcType=VARCHAR}
    </select>

    <insert id="insert" parameterType="cn.com.ykse.commons.leaf.entity.LeafSettings">
        INSERT INTO
        leaf_settings
        (leaf_name,leaf_type,delta,maximum,gmt_create)
        VALUES
        (#{name},#{type},#{delta},#{maximum},#{gmtCreate})
    </insert>

</mapper>